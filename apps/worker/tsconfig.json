{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./dist",

    "module": "NodeNext",              // ⬅️ 추가/수정
    "moduleResolution": "NodeNext",

    "baseUrl": ".",
    "paths": {
      "@restoration/shared/*": ["../../packages/shared/dist/*"]
    },
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
